{
  "include": ["src", "src/auto-imports.d.ts", "src/test/setup.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "types": [
      "vite-plugin-vue-layouts/client",
      "pinia",
      "vitest/globals",
      "node",
      "jsdom",
      "testing-library__jest-dom"
    ],
    "paths": {
      "@/*": ["src/*"],
      "@types/*": ["src/types/*"]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  }
}
