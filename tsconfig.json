{
  "include": [
    "src",
    "src/typed-router.d.ts",
    "src/auto-imports.d.ts",
    "src/auto-routes.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "types": [
      "vite-plugin-vue-layouts/client",
      "pinia"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  }
}
